{
  "name": "synergysphere",
  "version": "1.0.0",
  "description": "Full-Stack Team Collaboration Platform",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd backend && npm run dev",
